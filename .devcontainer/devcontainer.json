{
    "name": "Data Engineering with Python",
    "dockerComposeFile": "./docker-compose.yml",
    "service": "python",
    "workspaceFolder": "/app",
    
    "settings": {
      "terminal.integrated.shell.linux": "/bin/bash"
    },
    
    "extensions": [
      "ms-python.python"
    ],
  
    "forwardPorts": [5601, 8080, 8443], // Kibana and NiFi as an example. Add other ports if needed.
  
    "postCreateCommand": "echo 'Container setup complete!'"
  }
